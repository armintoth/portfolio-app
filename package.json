    "build": "react-scripts build",
    "electron-dev": "npm run build && electron ."
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^3.4.4"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.portfolio.dashboard",
    "productName": "Portfolio Dashboard",
